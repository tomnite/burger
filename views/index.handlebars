<h1>Tasty Burgers!</h1>

<div id="burger-display">

  <div id="not-eaten">

    <h2>Burgers that are not devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>

  </div>

  <img id="pic" src="/assets/img/burger.png">

  <div id="eaten">

    <h2>Burgers that are devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="add-burger">
  <div id="input">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Uneaten
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
